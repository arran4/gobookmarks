{{ template "head" $ }}
    {{ if not loggedIn }}
        You will need to login to see this page:
        <a href="{{ OAuth2URL }}">Login</a><br>
    {{else}}
        {{- range bookmarkPages }}
        <div class="bookmarkPage">
            {{- range .Blocks }}
            {{- if .HR }}
            <hr class="bookmarkHr" />
            {{- else }}
            <table>
                <tr valign="top">
                    {{- range .Columns }}
                    <td>
                        {{- range .Categories }}
                            <ul  style="list-style-type: none;">
                                <h2>{{ .Name }} <a class="edit-link" href="/editCategory?index={{ .Index }}&ref={{ref}}" title="Edit">&#9998;</a></h2>
                                {{- range .Entries }}
                                    <li>
                                        <img src="/proxy/favicon?url={{ .Url }}" alt="â€¢" style="width: 1em; max-height: 1em; font-weight: bolder; font-family: -moz-bullet-font;" />
                                        <a href="{{ .Url }}" target="_blank">{{ .Name }}</a>
                                    </li>
                                {{- end }}
                            </ul>
                        {{- end }}
                    </td>
                    {{- end }}
                </tr>
            </table>
            {{- end }}
            {{- end }}
        </div>
        {{- end }}
    {{end}}
{{ template "tail" $ }}